@model PoC.WebUI.ViewModel.ClienteViewModel

<div class="modal inmodal fade" id="view-modal" tabindex="-1" role="dialog" aria-hidden="true" data-backdrop="static" data-keyboard="false" aria-labelledby="Clientes">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" title="Fechar" class="close" data-dismiss="modal"><span aria-hidden="true">&times;</span><span class="sr-only">Fechar</span></button>
                <h4 class="modal-title">Clientes</h4>
            </div>
            @using (Html.BeginForm("Salvar", "Cliente", FormMethod.Post, new { role = "form", @autocomplete = "off" }))
            {
                @Html.AntiForgeryToken()

                @Html.HiddenFor(a => a.Id)

                <div class="modal-body">
                    <div class="form-group">
                        @Html.LabelFor(a => a.Nome)
                        @Html.TextBoxFor(a => a.Nome, new { @class = "form-control", @maxlength = "150", @required = "required" })
                        @Html.ValidationMessageFor(a => a.Nome, "", new { @class = "text-danger", @style = "font-weight: bold;" })
                    </div>
                </div>

                <div class="modal-footer">
                    <button type="submit" id="btnSalvarModal" class="btn btn-success">Salvar</button>
                    <button type="button" id="btnFecharModal" class="btn btn-white" data-dismiss="modal">Cancelar</button>
                </div>
            }
        </div>
    </div>
</div>